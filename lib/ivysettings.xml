<!-- Ivy settings for building a local Repository -->
<ivysettings>
  <property name="ivy.local.default.root"             value="/home/neogeo/FirstProject/lib/contents" override="false"/>
  <property name="ivy.local.default.ivy.pattern"      value="[module]/[revision]/ivy.xml" override="false"/>
  <property name="ivy.local.default.artifact.pattern" value="[module]/[revision]/[type]/[artifact]-[revision].[ext]" override="false"/>

  <settings defaultResolver="default"/>
  <!-- settings defaultResolver="maven" defaultConflictManager="all" / --> <!-- in order to get all revisions without any eviction -->
  <caches defaultCacheDir="${local.cache}" />

  <resolvers>
    <ibiblio name="public" m2compatible="true"/>
    <filesystem name="local">
      <ivy pattern="${ivy.local.default.root}/${ivy.local.default.ivy.pattern}" />
      <artifact pattern="${ivy.local.default.root}/${ivy.local.default.artifact.pattern}" />
    </filesystem>
    <chain name="default" returnFirst="true">
      <resolver ref="local"/>
      <resolver ref="public"/>
    </chain>
  </resolvers>


</ivysettings>
